{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "resolveJsonModule": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": [
    "./__tests__/**/*.ts",
    "./src/**/*.spec.tsx"
  ],
  "files": [
    "./jest-yoshi.config.js",
    "./src/external-types.d.ts",
    "./src/test-types.d.ts",
    "./src/module.ts",
    "./index-dev.ts"
  ]
}
