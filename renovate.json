{
  "extends": [
    "config:base",
    ":maintainLockFilesWeekly",
    ":automergeMinor"
  ],
  "automergeType": "pr-comment",
  "automergeComment": "#automerge",
  "enabledManagers": [
    "npm"
  ],
  "labels": [
    "PR: Chore :construction_worker:"
  ],
  "packageRules": [
    {
      "packageNames": ["react", "@sentry/browser"],
      "paths": ["packages/yoshi-flow-bm-runtime"],
      "enabled": false
    },
    {
      "packagePatterns": ["^@stylable/"],
      "groupName": "stylable"
    }
  ],
  "masterIssue": true
}
